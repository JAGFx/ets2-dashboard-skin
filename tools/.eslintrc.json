{
  "env": {
    "node": true,
    "jest": true
  },
  "extends": [
    "plugin:vue/vue3-recommended",
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 13
  },
  "plugins": ["prettier"],
  "rules": {
    "no-console": 1,
    "no-debugger": 2,
    "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
    "vue/no-v-html": "off",
    "vue/multi-word-component-names": "off",
    "prettier/prettier": 2
  }
}
