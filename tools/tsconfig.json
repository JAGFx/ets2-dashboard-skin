{
  "compilerOptions": {
    "baseUrl" : "../",
    "paths" : {
      "@/*": ["./src/*"],
      "@core/*": ["./lib/jagfx/core/src/*"],
      "@server/*": ["./lib/jagfx/server/src/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": true,
	"moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types" : ["@modyfi/vite-plugin-yaml/modules", "@types/jest"],
    "strictPropertyInitialization": false
  }
}